                  "properties": {
                    "prompt": {
                      "type": "string",
                      "description": "prompt to put into Gen AI"
                    },
                    "relevant_docs": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "string"
                      },
                      "description": "Dictionary of relevant documents"
                    }
